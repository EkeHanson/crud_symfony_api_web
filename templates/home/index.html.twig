{% extends 'base.html.twig' %}
    
        {% block body %}
         <div class="container">
          {% for message in app.flashes('notice') %}
            <div class="alert alert-success mt-4 mb-5"> 
                     {{ message }}
         {% endfor %}
        <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  
    {% for data in lists %}
  
    <tr>
      <th scope="row">{{data.id}}</th>
      <td>{{data.title}}</td>
      <td>{{data.content}}</td>
      <td>
      
        <a class="btn btn-success" href="{{path('main.post',{'id': data.id }) }}">Create</a>
        <a class="btn btn-warning" href="{{path('main.update',{'id': data.id }) }}">Update</a>
        <a class="btn btn-danger" href="{{path('main.delete',{'id': data.id }) }}">Delete</a>
       
       
       
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
        {% endblock %}
  

